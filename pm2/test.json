{
  "apps": [
    {
      "name": "gateway",
      "script": "src/app.js",
      "exec_mode": "cluster",
      "instances": 3,
      "max_memory_restart": "1G",
      "error_file": "logs/error.log",
      "out_file": "logs/out.log",
      //      "out_file": "/dev/null",
      //      "error_file": "/dev/null",
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "name": "thrift-server",
      "script": "src/thrift.js",
      "exec_mode": "cluster",
      "instances": 3,
      "max_memory_restart": "1G",
      "error_file": "logs/error.log",
      "out_file": "logs/out.log",
      //      "out_file": "/dev/null",
      //      "error_file": "/dev/null",
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "name": "grpc-server",
      "script": "src/grpc.js",
      "exec_mode": "cluster",
      "instances": 3,
      "max_memory_restart": "1G",
      "error_file": "logs/error.log",
      "out_file": "logs/out.log",
      //      "out_file": "/dev/null",
      //      "error_file": "/dev/null",
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "env": {
        "NODE_ENV": "test"
      }
    }
  ]
}
